<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScheduleEditAct"
    tools:showIn="@layout/activity_schedule_edit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="제목"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editTextTitleScheduleAdd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="제목을 입력하세요."
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:textSize="22dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="날짜"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewTargetDateScheduleAdd"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="YYYY-MM-DD"
                    android:textColor="@color/colorAccent"
                    android:textSize="22dp" />
            </TableRow>

            <TableRow android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="시간"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewTargetTimeAMPMScheduleAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="7dp"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="오전"
                        android:textColor="@color/colorAccent"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/textViewTargetTimeClockScheduleAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="12:00"
                        android:textColor="@color/colorAccent"
                        android:textSize="28dp" />
                </LinearLayout>
            </TableRow>

            <TableRow android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="도착 장소"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewDestinationAddressScheduleAdd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="대구광역시 대현동 경북대학교 공대9호관"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="이동수단"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textViewTransportationScheduleAdd"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="자동차 (60km)"
                    android:textColor="@color/colorAccent"
                    android:textSize="22dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="메모"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editTextMemoScheduleAdd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="메모를 입력하세요. (선택사항)"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:textSize="20dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>